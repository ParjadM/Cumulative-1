@model Cumulative1.Model.Teacher 

@{
    ViewData["Title"] = "Teacher Details";
}

<h1>Show Details</h1>

@if (Model != null) 
{
    <div>
        <h2>Name: @(Model.Name ?? "Unknown") </h2>
        <p><strong>Hire Date:</strong> @(Model.HireDate?.ToString("yyyy-MM-dd") ?? "Not Available")</p>
        <p><strong>Employee Number:</strong> @(Model.EmployeeNumber ?? "Not Available")</p>
    </div>
    <a asp-action="List" asp-controller="TeacherPage">
        Back to Teacher List
    </a>
}
else
{
    <p>Teacher not found.</p>
}